{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "alertName": {
      "value": "Entropy availability"
    },
    "alertDescription": {
      "value": ""
    },
    "alertSeverity": {
      "value": 3
    },
    "query": {
      "value": "InsightsMetrics | where Namespace == 'prometheus' and Name == 'node_entropy_available_bits' | extend hostname = tostring(parse_json(Tags).hostName)"
    },
    "metricMeasureColumn": {
      "value": "Val"
    },
    "resourceIdColumn": {
      "value": "_ResourceId"
    },
    "operator": {
      "value": "LessThan"
    },
    "threshold": {
      "value": "300"
    },
    "timeAggregation": {
      "value": "Minimum"
    },
    "windowSize": {
      "value": "PT5M"
    },
    "evaluationFrequency": {
      "value": "PT1M"
    },
    "dimensions": {
      "value": [
        {
          "name": "hostname",
          "operator": "Include",
          "values": ["*"]
        }
      ]
    }
  }
}
