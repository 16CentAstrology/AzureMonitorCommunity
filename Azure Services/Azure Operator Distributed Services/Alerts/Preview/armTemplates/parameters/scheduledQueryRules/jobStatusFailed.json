{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "alertName": {
      "value": "Job status failed"
    },
    "alertDescription": {
      "value": ""
    },
    "alertSeverity": {
      "value": 3
    },
    "query": {
      "value": "InsightsMetrics | where Namespace == 'prometheus' and Name == 'kube_job_status_failed' | extend Json = parse_json(Tags) | extend job_name = tostring(Json.job_name) | extend namespace = tostring(Json.namespace) | extend reason = tostring(Json.reason) | where Val > 0 | project TimeGenerated, Computer, Origin, AgentId, Type, _ResourceId, Val, job_name, namespace, reason"
    },
    "resourceIdColumn": {
      "value": "_ResourceId"
    },
    "operator": {
      "value": "GreaterThan"
    },
    "threshold": {
      "value": "0"
    },
    "timeAggregation": {
      "value": "Count"
    },
    "windowSize": {
      "value": "PT5M"
    },
    "evaluationFrequency": {
      "value": "PT1M"
    },
    "dimensions": {
      "value": [
        {
          "name": "job_name",
          "operator": "Include",
          "values": ["*"]
        },
        {
          "name": "namespace",
          "operator": "Include",
          "values": ["*"]
        }
      ]
    }
  }
}
