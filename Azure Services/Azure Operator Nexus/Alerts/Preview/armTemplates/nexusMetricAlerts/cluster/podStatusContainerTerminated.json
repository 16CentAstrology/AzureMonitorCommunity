{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "alertName": {
      "value": "Pod status container terminated"
    },
    "alertDescription": {
      "value": "Container status is OOMKilled|Error|ContainerCannotRun"
    },
    "alertSeverity": {
      "value": 3
    },
    "metricNamespace": {
      "value": "microsoft.networkcloud/clusters"
    },
    "metricName": {
      "value": "KubePodContainerStatusTerminatedReason"
    },
    "operator": {
      "value": "GreaterThan"
    },
    "threshold": {
      "value": 0
    },
    "targetResourceType": {
      "value": "Microsoft.NetworkCloud/clusters"
    },
    "timeAggregation": {
      "value": "Maximum"
    },
    "windowSize": {
      "value": "PT5M"
    },
    "evaluationFrequency": {
      "value": "PT5M"
    },
    "dimensions": {
      "value": [
        {
          "name": "Reason",
          "operator": "Include",
          "values": [
            "OOMKilled",
            "error",
            "ContainerCannotRun",
            "DeadlineExceeded",
            "Evicted",
            "Unknown"
          ]
        }
      ]
    }
  }
}
